<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/title_bar"
        android:visibility="gone"/>

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/txt_dp_15"
        android:layout_marginRight="@dimen/txt_dp_15"
        android:layout_marginTop="@dimen/txt_dp_20"
        android:layout_weight="1"
        android:overScrollMode="never"/>

    <View style="@style/horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/txt_dp_45"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_app_company"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorPrimaryDarkGray"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_18"/>

        <View style="@style/vertical_line"/>

        <TextView
            android:id="@+id/tv_app_company_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue"
            android:gravity="center"
            android:text="运营商"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_18"
            android:textStyle="bold"/>

    </LinearLayout>


</LinearLayout>