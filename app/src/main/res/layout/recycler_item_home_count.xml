<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/layout_item_home_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transition"
                android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:textSize="@dimen/txt_size_21"
        tools:ignore="ContentDescription"/>


    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/txt_dp_32"
        android:layout_below="@id/tv_item_count"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/transparent"
        android:gravity="center"
        android:textColor="@color/list_item_normal"/>

</RelativeLayout>