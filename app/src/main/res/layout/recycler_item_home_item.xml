<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/layout_item_home_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transition"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@drawable/qyjg_but_bg"
        tools:ignore="ContentDescription"/>


    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/txt_dp_32"
        android:layout_below="@id/iv_item_images"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/txt_dp_2"
        android:background="@color/transparent"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_item_count"
        android:layout_width="@dimen/txt_dp_20"
        android:layout_height="@dimen/txt_dp_20"
        android:layout_alignEnd="@+id/iv_item_images"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:background="@drawable/shape_label_red"
        android:gravity="center"
        android:text="0"
        android:textSize="@dimen/sp_12"
        tools:ignore="HardcodedText,UnusedAttribute"/>

</RelativeLayout>