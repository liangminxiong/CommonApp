<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loading"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/alert_width_86"
    android:layout_gravity="center"
    android:alpha="0.9"
    android:background="@drawable/dialog_custom_bg"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/alert_width_86"
        android:layout_height="@dimen/alert_width_86"
        android:gravity="center"
        android:orientation="vertical">

        <com.project.wisdomfirecontrol.firecontrol.ui.view.dialog.SpinView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:text="@string/inupdate"
            android:textSize="@dimen/txt_size_14"
            android:textStyle="normal" />

    </LinearLayout>

</LinearLayout>