<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_title"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:background="@color/transparent"
        android:src="@drawable/selector_btn_back"
        android:visibility="visible"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/txt_size_18"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_title_right"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/txt_dp_5"
        android:layout_marginRight="@dimen/txt_dp_5"
        android:background="@drawable/submit_sure"
        android:gravity="center"
        android:text="@string/title_right_txt"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_17"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_title_right_des"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/txt_dp_5"
        android:layout_marginRight="@dimen/txt_dp_5"
        android:background="@color/transparent"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_17"
        android:visibility="gone"
        tools:ignore="RtlHardcoded"/>

    <ImageView
        android:id="@+id/iv_sure"
        android:layout_width="70dp"
        android:padding="@dimen/txt_dp_10"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/submit_sure"
        android:visibility="gone"
        android:contentDescription="TODO"
        tools:ignore="ContentDescription,HardcodedText"/>

</LinearLayout>