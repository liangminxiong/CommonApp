<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_item_document"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/txt_dp_40"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/txt_dp_20"
        android:paddingStart="@dimen/txt_dp_20"
        android:text="@string/tv_title_des"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_18"
        tools:ignore="RtlHardcoded,RtlSymmetry"/>

    <TextView
        android:id="@+id/tv_item_des"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/txt_dp_20"
        android:paddingLeft="@dimen/txt_dp_20"
        android:paddingRight="@dimen/txt_dp_20"
        android:paddingStart="@dimen/txt_dp_20"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_17"
        tools:ignore="RtlSymmetry"/>

    <View style="@style/horizontal_line"/>

    <TextView
        android:id="@+id/tv_item_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/txt_dp_40"
        android:layout_marginRight="@dimen/txt_dp_10"
        android:gravity="center_vertical|right"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_14"
        tools:ignore="RtlHardcoded"/>

    <View style="@style/horizontal_gray_10"/>

</LinearLayout>